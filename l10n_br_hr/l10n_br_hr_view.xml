<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_l10n_br_hr_contract_form" model="ir.ui.view">
      <field name="name">l10n_br_hr.contract.form</field>
      <field name="model">hr.contract</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
      <field name="arch" type="xml">
        <field name="type_id" position="after">
          <newline/>
          <field name="ocorrencia" />
          <field name="filiado_a_sindicato" />
          <field name="tomador" />
        </field>
        <field name="date_end" position="after">
          <field name="optante_fgts"
            attrs="{'invisible':[('date_start','>','1988-10-04')]}" />
          <field name="data_de_opcao"
            attrs="{'invisible':[('optante_fgts','!=',True)]}" />
        </field>
        <notebook>
          <page string="Movimentação">

            <group col="2" colspan="2" name="left_column">
              <separator colspan="2" string="Admissão" />
              <field name="informacao_da_admissao" />
              <field name="tipo_de_admissao_id" />
              <field name="tipo_de_salario_contratual" />
              <field name="ocupacao_id" />
              <field name="vinculo_id" />

              <separator colspan="2" string="Local de Trabalho" />
              <field name="local_de_trabalho_estado" />
              <field name="local_de_trabalho_cidade" />
            </group>

            <group col="2" colspan="2" name="right_column">
              <separator colspan="2" string="Movimentação" />
              <field name="movimentacao" />
              <field name="data_de_movimentacao" />

              <separator colspan="2" string="Desligamento" />
              <field name="informacao_de_desligamento" />
              <field name="data_de_desligamento" />
              <field name="motivo_de_desligamento_id" />
            </group>

          </page>
          <page string="Sindicatos"
          attrs="{'invisible':[('filiado_a_sindicato','!=',True)]}">
            <field name="sindicato_cassoc1" />
            <field name="sindicato_cassoc2" />
            <field name="sindicato_cassist" />
            <field name="sindicato_csind" />
            <field name="sindicato_cconf" />
          </page>
        </notebook>
      </field>
    </record>

  </data>
</openerp>
