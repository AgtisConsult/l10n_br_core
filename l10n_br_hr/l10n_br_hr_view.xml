<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_l10n_br_hr_employee_form" model="ir.ui.view">
      <field name="name">l10n_br_hr.employee.form</field>
      <field name="model">hr.employee</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="hr.view_employee_form" />
      <field name="arch" type="xml">

        <xpath expr="/form/notebook/page[@string='Personal Information']/group"
        position="before">
          <group col="2" colspan="2">
            <separator string="Informações Gerais" colspan="2" />
            <field name="matricula" />
            <field name="grau_de_instrucao_id" />
            <field name="etnia_id" />
            <field name="deficiencia" />
          </group>
          <group col="2" colspan="2">
            <separator string="Documentos" colspan="2" />
            <field name="cpf" on_change="onchange_mask_cpf(cpf)" />
            <field name="pis_pasep" on_change="onchange_mask_pis_pasep(pis_pasep)" />
            <field name="carteira_de_trabalho_numero" />
            <field name="carteira_de_trabalho_serie" />
            <field name="possui_alvara_judicial" />
          </group>
        </xpath>
        <xpath
        expr="/form/notebook/page[@string='Personal Information']/group/field[@name='country_id']"
        position="replace">
          <field name="nationality_id" />
          <field name="country_id" string="País" />
          <field name="ano_de_chegada" attrs="{'readonly':[('nationality_id','=',1)]}" />
        </xpath>

      </field>
    </record>
    <record id="view_l10n_br_hr_contract_form" model="ir.ui.view">
      <field name="name">l10n_br_hr.contract.form</field>
      <field name="model">hr.contract</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
      <field name="arch" type="xml">
        <xpath expr="/form/group/field[@name='type_id']" position="after">
          <newline/>
          <field name="ocorrencia" />
          <field name="filiado_a_sindicato" />
        </xpath>
        <notebook colspan="4">
          <page string="Admissão">
            <field name="informacao_da_admissao" />
            <field name="tipo_de_admissao_id" />
            <field name="tipo_de_salario_contratual" />
            <field name="ocupacao_id" />
            <field name="vinculo_id" />
            <group col="4" colspan="4">
              <separator colspan="4" string="Local de Trabalho" />
              <field name="local_de_trabalho_estado" />
              <field name="local_de_trabalho_cidade" />
            </group>
          </page>
          <page string="Desligamento">
            <field name="informacao_de_desligamento" />
            <field name="data_de_desligamento" />
            <field name="motivo_de_desligamento_id" />
          </page>
          <page string="Sindicatos"
          attrs="{'invisible':[('filiado_a_sindicato','!=',True)]}">
            <field name="sindicato_cassoc1" />
            <field name="sindicato_cassoc2" />
            <field name="sindicato_cassist" />
            <field name="sindicato_csind" />
            <field name="sindicato_cconf" />
          </page>
        </notebook>
      </field>
    </record>

  </data>
</openerp>
