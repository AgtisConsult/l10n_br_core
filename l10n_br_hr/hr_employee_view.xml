<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_l10n_br_hr_employee_form" model="ir.ui.view">
      <field name="name">l10n_br_hr.employee.form</field>
      <field name="model">hr.employee</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="hr.view_employee_form" />
      <field name="arch" type="xml">

        <xpath expr="/form/sheet/notebook/page[@string='Personal Information']/group"
          position="before">
          <group col="2" colspan="2">
            <separator string="Informações Gerais" colspan="2" />
            <field name="matricula" />
            <field name="grau_de_instrucao_id" />
            <field name="etnia_id" />
            <field name="deficiencia" />
          </group>
          <group col="2" colspan="2">
            <separator string="Documentos" colspan="2" />
            <field name="cpf" on_change="onchange_mask_cpf(cpf)" />
            <field name="pis_pasep" on_change="onchange_mask_pis_pasep(pis_pasep)" />
            <field name="carteira_de_trabalho_numero" />
            <field name="carteira_de_trabalho_serie" />
            <field name="possui_alvara_judicial" />
            <field name="codigo_caixa"
              on_change="onchange_codigo_caixa(codigo_caixa)" />
          </group>
        </xpath>
        <xpath
          expr="/form/sheet/notebook/page[@string='Personal Information']/group/group/field[@name='country_id']"
          position="replace">
          <field name="nationality_id" />
          <field name="country_id" string="País" />
          <field name="ano_de_chegada" attrs="{'readonly':[('nationality_id','=',1)]}" />
        </xpath>

        <notebook>
          <page string="Endereços">
            <separator string="Endereço Residencial" colspan="4" />
            <group colspan="2" col="4">
              <field name="home_street" colspan="4"/>
              <field name="home_number"/>
              <field name="home_street2"/>
              <field name="home_zip"
                on_change="onchange_mask_zip('home_zip', home_zip)" />
              <field name="home_district"/>
              <field name="home_country_id"/>
              <field name="home_state_id"/>
              <field name="home_l10n_br_city_id" colspan="4"/>
            </group>
            <group colspan="2" col="2">
              <field name="home_phone"/>
              <field name="home_mobile"/>
              <field name="home_fax"/>
              <field name="home_email"/>
            </group>

            <separator string="Endereço Comercial" colspan="4" />
            <group colspan="2" col="4">
              <field name="street" colspan="4"/>
              <field name="number"/>
              <field name="street2"/>
              <field name="zip"
                on_change="onchange_mask_zip('zip', zip)" />
              <field name="district"/>
              <field name="country_id" string="País" />
              <field name="state_id"/>
              <field name="l10n_br_city_id" colspan="4"/>
            </group>
            <group colspan="2" col="2">
              <field name="phone"/>
              <field name="mobile"/>
              <field name="fax"/>
              <field name="email"/>
            </group>
          </page>
        </notebook>

        <xpath position="replace"
          expr="/form/sheet/notebook/page[@string='Public Information']/group/group[@string='Contact Information']"
          ></xpath>
        <xpath position="replace"
          expr="/form/sheet/notebook/page[@string='Personal Information']/group/group[@string='Contact Information']"
          ></xpath>

      </field>
    </record>

  </data>
</openerp>
