<?xml version="1.0" encoding="utf-8"?>
<openerp>

  <data>

    <record model="ir.ui.view" id="view_l10n_br_order_form">
      <field name="name">l10n_br_purchase.order.form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <field name="fiscal_position" position="replace" >
          <field name="fiscal_operation_category_id" on_change="onchange_fiscal_operation_category_id(partner_id, company_id, fiscal_operation_category_id)"
            attrs="{'required':[('state','!=','draft')]}" />
          <field name="fiscal_operation_id" domain="[('type','=','input'),('use_purchase','=',True),('fiscal_operation_category_id','=',fiscal_operation_category_id)]"
            attrs="{'required':[('state','!=','draft')]}" />
          <field domain="[('fiscal_operation_id','=',fiscal_operation_id)]" name="fiscal_position" />
        </field>
        <field name="state" position="replace">
          <field name="state" widget="statusbar"
            statusbar_visible="draft,to_invoice,approved,done"
            statusbar_colors='{"except_picking":"red","except_invoice":"red","confirmed":"blue","wait":"blue"}'
            readonly="1"/>
        </field>
        <button name="purchase_confirm" position="replace">
          <button name="purchase_to_invoice" states="draft" string="Confirmar"
            icon="gtk-go-forward"/>
          <button name="purchase_confirm" states="to_invoice"
            string="Convert to Purchase Order" icon="gtk-go-forward"/>
        </button>
      </field>
    </record>
    <record model="ir.ui.view" id="view_l10n_br_order_form1">
      <field name="name">l10n_br_purchase.order.form1</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="account_fiscal_position_rule_purchase.view_account_fiscal_position_rule_purchase_order_form1"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="replace" >
          <field name="partner_id" on_change="onchange_partner_id(partner_id, company_id, fiscal_operation_category_id)" context="{'search_default_supplier':1}"/>
        </field>
      </field>
    </record>
    <record model="ir.ui.view" id="l10n_br_purchase_order_line_form">
      <field name="name">l10n_br_purchase.order.line.form</field>
      <field name="model">purchase.order.line</field>
      <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
      <field name="arch" type="xml">
        <field name="product_id" position="replace" >
          <field name="product_id" colspan="4" context="{'partner_id':parent.partner_id, 'quantity':product_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'warehouse':parent.warehouse_id}" on_change="product_id_change(parent.pricelist_id,product_id,product_qty,product_uom,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,price_unit,notes,context,parent.fiscal_operation_category_id,parent.fiscal_operation_id)"/>
        </field>
      </field>
    </record>
    <record model="ir.ui.view" id="l10n_br_purchase_order_line_form2">
      <field name="name">l10n_br_purchase.order.line.form2</field>
      <field name="model">purchase.order.line</field>
      <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
      <field name="arch" type="xml">
        <field name="name" position="after" >
          <field name="fiscal_operation_category_id"
            attrs="{'required':[('state','!=','draft')]}" />
          <field name="fiscal_operation_id"
            attrs="{'required':[('state','!=','draft')]}"
            on_change="fiscal_operation_id_change(fiscal_operation_id)" />
          <field name="fiscal_position"
            on_change="product_id_change(parent.pricelist_id,product_id,product_qty,product_uom,parent.partner_id, parent.date_order,fiscal_position,date_planned,name,price_unit,notes,context,fiscal_operation_category_id,fiscal_operation_id)"/>
          <field name="cfop_id" groups="base.group_sale_salesman"/>
          <field name="state" readonly="1" invisible="1" />
        </field>
      </field>
    </record>

  </data>

</openerp>
