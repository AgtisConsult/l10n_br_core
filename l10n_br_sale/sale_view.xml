<?xml version="1.0" encoding="utf-8"?>
<openerp>

  <data>

    <record id="view_l10n_br_sale_order_form" model="ir.ui.view">
      <field name="name">l10n_br_sale.order.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="account_fiscal_position_rule_sale.view_order_form1"/>
      <field name="priority">36</field>
      <field name="arch" type="xml">
        
        <field name="shop_id" position="replace">
          <field name="shop_id" widget="selection"
            on_change="onchange_shop_id(shop_id, partner_id, fiscal_operation_category_id)" />
        </field>
        
        <field name="fiscal_position" position="replace">
          <field name="fiscal_operation_category_id"
            on_change="onchange_fiscal_operation_category_id(partner_id, shop_id, fiscal_operation_category_id)"
            attrs="{'required':[('state','!=','draft')]}" />
          <field name="fiscal_operation_id"
            attrs="{'required':[('state','!=','draft')]}" />
          <field domain="[('fiscal_operation_id','=',fiscal_operation_id)]"
            name="fiscal_position" />
        </field>

        <field name="partner_id" position="replace">
          <field name="partner_id" domain="[('customer','=',True)]"
            on_change="onchange_partner_id(partner_id, shop_id, fiscal_operation_category_id)"
            context="{'search_default_customer':1}" required="1" />
        </field>
      </field>
    </record>

    <record id="l10n_br_sale_view_shop_form" model="ir.ui.view">
      <field name="name">l10n_br_sale.sale.shop</field>
      <field name="model">sale.shop</field>
      <field name="inherit_id" ref="sale.view_shop_form"/>
      <field name="priority">36</field>
      <field name="arch" type="xml">
        <field name="project_id" position="after">
          <field name="default_fo_category_id" required="1"/>
        </field>
      </field>
    </record>

    <!-- sale order line -->
    <record id="l10n_br_sale_view_order_form" model="ir.ui.view">
      <field name="name">l10n_br_sale.order.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="priority">36</field>
      <field name="arch" type="xml">
        <field name="discount" position="after">

          <field name="fiscal_operation_category_id"
            groups="base.group_sale_salesman"
            attrs="{'required':[('state','!=','draft')]}" />
          <field name="fiscal_operation_id"
            groups="base.group_sale_salesman"
            on_change="fiscal_operation_id_change(fiscal_operation_id)"
            attrs="{'required':[('state','!=','draft')]}" />
          <field name="fiscal_position"
            groups="base.group_sale_salesman"
            on_change="product_id_change(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, False, True, parent.date_order, product_packaging, fiscal_position, False, context, fiscal_operation_category_id, fiscal_operation_id, parent.shop_id)" />
          <field name="cfop_id" groups="base.group_sale_salesman"/>

        </field>
      </field>
    </record>
    <record id="l10n_br_sale_view_order_form5" model="ir.ui.view">
      <field name="name">l10n_br_sale.order.form5</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="priority">36</field>
      <field name="arch" type="xml">
        <field name="product_id" position="replace">
          <field colspan="3" name="product_id"
            context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'shop':parent.shop_id, 'uom':product_uom}"
            on_change="product_id_change(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, False, True, parent.date_order, product_packaging, parent.fiscal_position, False, context, parent.fiscal_operation_category_id, parent.fiscal_operation_id, parent.shop_id)" />
        </field>
        <field name="product_uos" position="replace">
          <field groups="product.group_uos" name="product_uos" />
        </field>
      </field>
    </record>

  </data>

</openerp>
