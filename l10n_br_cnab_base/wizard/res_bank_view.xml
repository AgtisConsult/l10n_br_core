<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="cnab_res_bank_form" model="ir.ui.view">
            <field name="name">cnab.bank</field>
            <field name="view_type">form</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <group string="Communication" position="after">
                    <group string="CNAB">
                        <field name="enable_cnab"/>
                        <field name="cnab_name" attrs="{'required': [('enable_cnab','=',True)], 'readonly': [('enable_cnab','=',False)]}"/>
                        <field name="cnab_code" attrs="{'required': [('enable_cnab','=',True)], 'readonly': [('enable_cnab','=',False)]}"/>
                    </group>
                </group>
            </field>
        </record>
        
    </data>
</openerp>
