<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>

    <record model="ir.ui.view" id="view_l10n_br_account_company_form">
      <field name="name">l10n_br_account.company</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form" />
      <field name="arch" type="xml">
        <notebook>
          <page position="inside" string="Localização">
            <notebook>
              <page string="Dados Fiscais">
                <group>
                  <field name="fiscal_type" placeholder="Regime Tributário" />
                  <field name="cnae_main_id"  placeholder="CNAE Primário" />
                  <field name="cnae_secondary_ids" />
                </group>
              </page>
              <page string="Regime Normal"
                attrs="{'invisible': [('fiscal_type', '!=', '3')]}"></page>
              <page string="Simples Nacional"
                attrs="{'invisible': [('fiscal_type', '=', '3')]}">
                <group>
                  <field name="annual_revenue"
                    placeholder="Faturamento Anual" />
                </group>
              </page>
              <page string="Documento Fiscal">
                <group>
                  <field name="document_serie_service_id"
                    placeholder="Série da Nota Fiscal de Serviço" />
                  <field name="document_serie_product_ids" />
                </group>
              </page>
              <page string="NF-e">
                <group>
                  <field name="nfe_version" />
                  <field name="nfe_source_folder" />
                  <field name="nfe_destination_folder" />
                  <field name="nfe_cert_file" />
                  <field name="nfe_cert_password" password="True" />
                </group>
              </page>
              <page string="NFS-e">
                <group>
                  <field name="nfse_version" />
                  <field name="nfse_source_folder" />
                  <field name="nfse_destination_folder" />
                  <field name="nfse_server_host" />
                  <field name="nfse_server_address" />
                  <field name="nfse_cert_file" />
                  <field name="nfse_cert_password" password="True" />
                </group>
              </page>
            </notebook>
          </page>
        </notebook>
      </field>
    </record>

  </data>
</openerp>

