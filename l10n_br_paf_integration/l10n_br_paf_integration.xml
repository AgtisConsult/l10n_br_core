<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
      
         <record model='ir.actions.act_window' id='action_id_view_point_of_sale'>
            <field name="name">Criar novo Ponto de venda</field>
            <field name="res_model">point.of.sale</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="usage">menu</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Clique aqui para configurar um novo ponto de venda.</p>                
            </field>
        </record>


        <record model="ir.ui.view" id="fiscal_obligation_form_view">
            <field name="name">point_of_sale_form</field>
            <field name="model">point.of.sale</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Pontos de vendas">                
                    <field name="code" colspan="2" placeholder="Código"/>
                    <field name="description" placeholder="Descricao" />
                    <field name="pdv_number" placeholder="Número PDV" />                 
                </form>
            </field>
        </record>
        
        <menuitem icon="terp-crm" id="menu_l10n_br_base" name="Localização Brasil" web_icon="images/l10n_br.png" web_icon_hover="images/l10n_br-hover.png"/>
        <menuitem id="menu_l10n_br_base_configuration" name="Configuração" parent="menu_l10n_br_base" />
        <menuitem action="action_id_view_point_of_sale" name="Pontos de venda" parent="menu_l10n_br_base_configuration" id="point_of_sale_menu" />


    </data>
</openerp>